:80 {
  encode zstd gzip

  @api path /api/* /health /tasks/*  
  handle @api {
    reverse_proxy backend:3000
  }

  handle {
    root * /srv
    try_files {path} /index.html
    file_server
  }
  
  handle_path /api/v1/forecast* {
    reverse_proxy api_py:8000
  }
  handle_path /api/v1/kpis* {
    reverse_proxy api_py:8000
  }

}
